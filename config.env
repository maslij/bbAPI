# BrinkByte Vision - tAPI Edge Service Configuration
# Local Development Setup - Copy to .env before running

# ===== Billing Service Configuration =====
BILLING_SERVICE_URL=http://localhost:8081/api/v1
BILLING_API_KEY=dev-api-key-123
BILLING_TIMEOUT_MS=5000
BILLING_MAX_RETRIES=3
MOCK_BILLING_SERVICE=false

# ===== Edge Device Identity =====
EDGE_DEVICE_ID=auto
TENANT_ID=tenant-123
MANAGEMENT_TIER=basic

# ===== PostgreSQL Database =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=tapi_edge
POSTGRES_USER=tapi_user
POSTGRES_PASSWORD=tapi_dev_password
POSTGRES_POOL_SIZE=10
POSTGRES_CONNECTION_TIMEOUT_MS=5000

# ===== Redis Cache =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY_MB=256
REDIS_CONNECTION_TIMEOUT_MS=3000

# ===== License Caching Configuration =====
LICENSE_CACHE_TTL_SECONDS=3600
ENTITLEMENT_CACHE_TTL_SECONDS=300
ENABLE_OFFLINE_MODE=true
OFFLINE_GRACE_PERIOD_HOURS=24

# ===== Usage Tracking Configuration =====
USAGE_BATCH_SIZE=1000
USAGE_SYNC_INTERVAL_MINUTES=5
TRACK_API_CALLS=true
TRACK_LLM_TOKENS=true
TRACK_STORAGE=true
TRACK_AGENT_EXECUTIONS=true
TRACK_SMS=true

# ===== Feature Flags =====
ENABLE_LICENSE_VALIDATION=true
ENABLE_USAGE_TRACKING=true
ENABLE_HEARTBEAT=true
HEARTBEAT_INTERVAL_MINUTES=15
BYPASS_LICENSE_CHECK=false

# ===== API Server Configuration =====
API_PORT=8080
API_THREADS=4
API_ENABLE_CORS=true

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=/var/log/tapi/tapi.log
LOG_MAX_FILE_SIZE_MB=100
LOG_MAX_FILES=10

# ===== Development/Debug Settings =====
DEBUG_MODE=true

